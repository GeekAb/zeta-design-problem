{{#content}}
    <div class="stream-item p3 flex flex-wrap" id="{{id}}">
        <div class="inline-block stream-img mr2">
            <a target='_new' href="https://twitter.com/{{user.screen_name}}">
                <img src="{{user.profile_image_url}}" alt='{{user.name}}' class='circle' />
            </a>
        </div>
        <div class="inline-block stream-item-data">
            <div class="stream-item-head pb1">
                <div class="name inline-block h3 bold pr1">
                    {{#retweeted}}
                        <i class="fa fa-retweet pr1 retweeted" aria-hidden="true"></i>
                    {{/retweeted}}
                    {{user.name}}
                </div>
                <div class="username inline-block h4">
                    <a target='_new' href="https://twitter.com/{{user.screen_name}}" class="text-decoration-none">
                        @{{user.screen_name}}
                    </a>
                </div>
                <div class="time inline-block right" id="{{id}}-time"></div>
            </div>
            <div class="stream-item-content pb2 pr2 h4" id="{{id}}-content">
                
            </div>
            <div class="stream-item-footer">
                <div class='inline-block mr2'><i class="fa fa-share" aria-hidden="true"></i></div>
                <div class='inline-block mr2'>
                    <i class="fa fa-star {{#favorited}}favorited{{/favorited}}" aria-hidden="true"></i>
                    <span>{{favorite_count}}</span>
                </div>
                <div class='inline-block mr2'>
                    <i class="fa fa-retweet {{#retweeted}}retweeted{{/retweeted}}" aria-hidden="true"></i>
                    <span>{{retweet_count}}</span>
                </div>
                <div class='inline-block mr2'><i class="fa fa-ellipsis-h" aria-hidden="true"></i></div>
                <div class='inline-block right mr1'><i class="fa fa-expand" aria-hidden="true"></i></div>
            </div>
        </div>
    </div>
{{/content}}